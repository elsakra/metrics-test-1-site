---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Hours & Location - Southaven Internal Medicine"
  description="Visit Southaven Internal Medicine at 7680 Airways Blvd, Southaven, MS 38671. Office hours: Mon/Wed 7am-5pm, Tue/Thu 8am-5pm, Fri 7am-11am. Call (662) 349-1999."
>
  <Header />
  
  <main>
    <Hero 
      title="Hours & Location"
      subtitle="Find us easily and plan your visit with our convenient office hours"
      showCta={false}
    />
    
    <!-- Office Hours Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Regular Hours -->
          <div class="bg-primary-50 p-8 rounded-lg">
            <h2 class="text-3xl font-bold text-primary-800 mb-8">Regular Clinic Hours</h2>
            
            <div class="space-y-6">
              <div class="flex justify-between items-center py-4 border-b border-primary-200">
                <span class="text-lg font-semibold text-gray-800">Monday & Wednesday</span>
                <span class="text-lg text-primary-800 font-medium">7:00 AM - 5:00 PM</span>
              </div>
              
              <div class="flex justify-between items-center py-4 border-b border-primary-200">
                <span class="text-lg font-semibold text-gray-800">Tuesday & Thursday</span>
                <span class="text-lg text-primary-800 font-medium">8:00 AM - 5:00 PM</span>
              </div>
              
              <div class="flex justify-between items-center py-4 border-b border-primary-200">
                <span class="text-lg font-semibold text-gray-800">Friday</span>
                <span class="text-lg text-primary-800 font-medium">7:00 AM - 11:00 AM</span>
              </div>
              
              <div class="bg-accent-100 p-6 rounded-lg mt-8">
                <div class="flex items-center space-x-3 mb-2">
                  <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <h3 class="text-lg font-semibold text-accent-800">Same-Day Appointments</h3>
                </div>
                <p class="text-accent-700">
                  We have 15 appointments open access for same day appointments
                </p>
              </div>
            </div>
          </div>
          
          <!-- Holiday Hours -->
          <div class="bg-gray-50 p-8 rounded-lg">
            <h2 class="text-3xl font-bold text-primary-800 mb-8">Holiday Hours</h2>
            
            <div class="mb-6">
              <h3 class="text-xl font-semibold text-red-600 mb-4">Closed on the Following Holidays:</h3>
              <ul class="space-y-3 text-gray-700">
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                  <span>New Year's Day</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                  <span>Memorial Day</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                  <span>Independence Day</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                  <span>Labor Day</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                  <span>Thanksgiving Day</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                  <span>Christmas Day</span>
                </li>
              </ul>
            </div>
            
            <div class="bg-yellow-50 p-4 rounded-lg border border-yellow-200">
              <div class="flex items-center space-x-2 mb-2">
                <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 18.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
                <h4 class="font-semibold text-yellow-800">Holiday Notice</h4>
              </div>
              <p class="text-yellow-700 text-sm">
                Please call ahead during holiday weeks as hours may be modified.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Location Section -->
    <section class="py-20 bg-primary-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="section-title">Our Location</h2>
          <p class="section-subtitle">
            Conveniently located in Southaven, Mississippi, we're easily accessible from Memphis and surrounding areas.
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Address & Contact Info -->
          <div class="space-y-8">
            <div class="bg-white p-8 rounded-lg shadow-md">
              <h3 class="text-2xl font-semibold text-primary-800 mb-6">Visit Our Office</h3>
              
              <div class="space-y-6">
                <div class="flex items-start space-x-4">
                  <div class="bg-accent-100 p-3 rounded-full">
                    <img 
                      src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291045/auto-site-builder/metrics-test-1/image_4.png" 
                      alt="Location" 
                      class="w-6 h-6"
                    />
                  </div>
                  <div>
                    <h4 class="font-semibold text-primary-800 mb-2">Address</h4>
                    <p class="text-gray-700 text-lg">
                      7680 Airways Blvd.<br>
                      Southaven, MS 38671
                    </p>
                    <a 
                      href="https://maps.google.com/?q=7680+Airways+Blvd,+Southaven,+MS+38671" 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="text-accent-600 hover:text-accent-700 transition-colors font-medium inline-flex items-center mt-2"
                    >
                      Get Directions
                      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                    </a>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="bg-primary-100 p-3 rounded-full">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-primary-800 mb-2">Phone</h4>
                    <a href="tel:6623491999" class="text-gray-700 text-lg hover:text-accent-600 transition-colors">
                      (662) 349-1999
                    </a>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="bg-medical-teal/20 p-3 rounded-full">
                    <svg class="w-6 h-6 text-medical-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-primary-800 mb-2">Fax</h4>
                    <p class="text-gray-700 text-lg">(662) 349-9734</p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Parking & Accessibility -->
            <div class="bg-white p-8 rounded-lg shadow-md">
              <h3 class="text-2xl font-semibold text-primary-800 mb-6">Parking & Accessibility</h3>
              <div class="space-y-4">
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-gray-700">Free parking available</span>
                </div>
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-gray-700">Wheelchair accessible</span>
                </div>
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-gray-700">Ground floor location</span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Map Placeholder -->
          <div class="bg-white p-8 rounded-lg shadow-md">
            <h3 class="text-2xl font-semibold text-primary-800 mb-6">Find Us</h3>
            <div class="bg-gray-200 rounded-lg h-96 flex items-center justify-center">
              <div class="text-center">
                <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <p class="text-gray-600 mb-4">Interactive map coming soon</p>
                <a 
                  href="https://maps.google.com/?q=7680+Airways+Blvd,+Southaven,+MS+38671" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="btn-primary"
                >
                  View on Google Maps
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Contact CTA -->
    <section class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-primary-800 mb-6">Ready to Schedule Your Visit?</h2>
        <p class="text-lg text-gray-700 mb-8">
          Call us today to schedule an appointment or if you have any questions about our location or hours.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:6623491999" class="btn-primary text-lg px-10 py-4">
            Call (662) 349-1999
          </a>
          <a href="/patient-portal" class="btn-secondary text-lg px-10 py-4">
            Access Patient Portal
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>