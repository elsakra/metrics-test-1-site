---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Hours & Location - Southaven Internal Medicine"
  description="Visit Southaven Internal Medicine at 7680 Airways Blvd, Southaven, MS 38671. Office hours: Mon/Wed 7am-5pm, Tue/Thu 8am-5pm, Fri 7am-11am. Call (662) 349-1999."
>
  <Header />
  
  <main>
    <Hero 
      title="Hours & Location"
      subtitle="Find us easily and plan your visit with our convenient office hours"
      showCta={false}
    />
    
    <!-- Office Hours Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Regular Hours -->
          <div class="bg-primary-50 p-8 rounded-lg">
            <h2 class="text-3xl font-bold text-primary-800 mb-8">Regular Clinic Hours</h2>
            
            <div class="space-y-6">
              <div class="flex justify-between items-center py-4 border-b border-primary-200">
                <span class="text-lg font-semibold text-gray-800">Monday & Wednesday</span>
                <span class="text-lg text-primary-800 font-medium">7:00 AM - 5:00 PM</span>
              </div>
              
              <div class="flex justify-between items-center py-4 border-b border-primary-200">
                <span class="text-lg font-semibold text-gray-800">Tuesday & Thursday</span>
                <span class="text-lg text-primary-800 font-medium">8:00 AM - 5:00 PM</span>
              </div>
              
              <div class="flex justify-between items-center py-4 border-b border-primary-200">
                <span class="text-lg font-semibold text-gray-800">Friday</span>
                <span class="text-lg text-primary-800 font-medium">7:00 AM - 11:00 AM</span>
              </div>
              
              <div class="bg-accent-100 p-6 rounded-lg mt-8">
                <div class="flex items-center space-x-3 mb-2">
                  <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <h3 class="text-lg font-semibold text-accent-800">Same-Day Appointments</h3>
                </div>
                <p class="text-accent-700">
                  We have 15 appointments open access for same day appointments
                </p>
              </div>
            </div>
          </div>
          
          <!-- Holiday Hours -->
          <div class="bg-gray-50 p-8 rounded-lg">
            <h2 class="text-3xl font-bold text-primary-800 mb-8">Holiday Hours</h2>
            
            <div class="mb-6">
              <h3 class="text-xl font-semibold text-red-600 mb-4">Closed on the Following Holidays:</h3>
              <ul class="space-y-3 text-gray-700">
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <span>New Year's Day</span>
                </li>
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <span>Martin Luther King Jr. Day</span>
                </li>
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <span>Presidents' Day</span>
                </li>
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <span>Memorial Day</span>
                </li>
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <span>Independence Day</span>
                </li>
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <span>Labor Day</span>
                </li>
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <span>Thanksgiving Day</span>
                </li>
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <span>Christmas Day</span>
                </li>
              </ul>
            </div>
            
            <div class="bg-yellow-50 border border-yellow-200 p-4 rounded-lg">
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-yellow-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z" />
                </svg>
                <div>
                  <p class="text-yellow-800 font-medium">Holiday Schedule Notice</p>
                  <p class="text-yellow-700 text-sm mt-1">
                    Please call ahead during holiday weeks as hours may vary.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Location & Map Section -->
    <section class="py-20 bg-primary-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="section-title">Our Location</h2>
          <p class="section-subtitle">
            Conveniently located in Southaven, MS with easy access and ample parking
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
          <!-- Address & Directions -->
          <div class="space-y-8">
            <div class="bg-white p-8 rounded-lg shadow-md">
              <h3 class="text-2xl font-bold text-primary-800 mb-6">Address & Contact</h3>
              
              <div class="space-y-4">
                <div class="flex items-start space-x-4">
                  <img 
                    src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291045/auto-site-builder/metrics-test-1/image_4.png" 
                    alt="Location" 
                    class="w-6 h-6 mt-1"
                  />
                  <div>
                    <p class="text-lg font-semibold text-gray-800">7680 Airways Blvd.</p>
                    <p class="text-lg text-gray-800">Southaven, MS 38671</p>
                  </div>
                </div>
                
                <div class="flex items-center space-x-4">
                  <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <a href="tel:6623491999" class="text-lg text-primary-800 hover:text-accent-600 transition-colors font-medium">
                    (662) 349-1999
                  </a>
                </div>
                
                <div class="flex items-center space-x-4">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                  </svg>
                  <span class="text-lg text-gray-800">(662) 349-9734</span>
                </div>
              </div>
            </div>
            
            <div class="bg-white p-8 rounded-lg shadow-md">
              <h3 class="text-2xl font-bold text-primary-800 mb-6">Parking & Accessibility</h3>
              
              <div class="space-y-4">
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-gray-700">Free parking available</span>
                </div>
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-gray-700">Wheelchair accessible entrance</span>
                </div>
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-gray-700">Ground floor location</span>
                </div>
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-gray-700">Easy access from Airways Boulevard</span>
                </div>
              </div>
            </div>
            
            <div class="bg-accent-50 p-6 rounded-lg">
              <h4 class="text-lg font-semibold text-accent-800 mb-3">Directions</h4>
              <p class="text-accent-700 leading-relaxed">
                We are conveniently located on Airways Boulevard in Southaven, just minutes from Memphis. Look for our sign and turn into the medical complex parking lot.
              </p>
            </div>
          </div>
          
          <!-- Interactive Map -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="h-96 bg-gray-100 relative">
              <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3261.8234567890123!2d-89.9876543!3d34.9876543!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2s7680%20Airways%20Blvd%2C%20Southaven%2C%20MS%2038671!5e0!3m2!1sen!2sus!4v1234567890123!5m2!1sen!2sus"
                width="100%" 
                height="100%" 
                style="border:0;" 
                allowfullscreen="" 
                loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade"
                title="Southaven Internal Medicine Location"
                class="absolute inset-0"
              ></iframe>
              
              <!-- Fallback for when map doesn't load -->
              <div class="absolute inset-0 flex items-center justify-center bg-gray-100">
                <div class="text-center p-8">
                  <img 
                    src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291045/auto-site-builder/metrics-test-1/image_4.png" 
                    alt="Location" 
                    class="w-16 h-16 mx-auto mb-4 opacity-50"
                  />
                  <h4 class="text-lg font-semibold text-gray-600 mb-2">Interactive Map</h4>
                  <p class="text-gray-500 mb-4">7680 Airways Blvd, Southaven, MS 38671</p>
                  <a 
                    href="https://maps.google.com/?q=7680+Airways+Blvd,+Southaven,+MS+38671" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="btn-primary inline-block"
                  >
                    Get Directions
                  </a>
                </div>
              </div>
            </div>
            
            <div class="p-6">
              <div class="flex justify-between items-center">
                <div>
                  <h4 class="font-semibold text-primary-800">Southaven Internal Medicine</h4>
                  <p class="text-gray-600">7680 Airways Blvd, Southaven, MS 38671</p>
                </div>
                <a 
                  href="https://maps.google.com/?q=7680+Airways+Blvd,+Southaven,+MS+38671" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="btn-secondary text-sm px-4 py-2"
                >
                  Get Directions
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Contact CTA Section -->
    <section class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-primary-800 mb-6">Ready to Schedule Your Visit?</h2>
        <p class="text-lg text-gray-700 mb-8">
          Call us today to schedule an appointment or if you have any questions about our location or hours.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:6623491999" class="btn-primary text-lg px-10 py-4">
            Call (662) 349-1999
          </a>
          <a href="/patient-portal" class="btn-secondary text-lg px-10 py-4">
            Patient Portal
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>