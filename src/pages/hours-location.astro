---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Hours & Location - Southaven Internal Medicine"
  description="Visit Southaven Internal Medicine at 7680 Airways Blvd, Southaven, MS 38671. Office hours: Mon/Wed 7am-5pm, Tue/Thu 8am-5pm, Fri 7am-11am. Call (662) 349-1999."
>
  <Header />
  
  <main>
    <Hero 
      title="Hours & Location"
      subtitle="Find us easily and plan your visit with our convenient office hours"
      showCta={false}
    />
    
    <!-- Office Hours Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Regular Hours -->
          <div class="bg-primary-50 p-8 rounded-lg">
            <h2 class="text-3xl font-bold text-primary-800 mb-8">Regular Clinic Hours</h2>
            
            <div class="space-y-6">
              <div class="flex justify-between items-center py-4 border-b border-primary-200">
                <span class="text-lg font-semibold text-gray-800">Monday & Wednesday</span>
                <span class="text-lg text-primary-800 font-medium">7:00 AM - 5:00 PM</span>
              </div>
              
              <div class="flex justify-between items-center py-4 border-b border-primary-200">
                <span class="text-lg font-semibold text-gray-800">Tuesday & Thursday</span>
                <span class="text-lg text-primary-800 font-medium">8:00 AM - 5:00 PM</span>
              </div>
              
              <div class="flex justify-between items-center py-4 border-b border-primary-200">
                <span class="text-lg font-semibold text-gray-800">Friday</span>
                <span class="text-lg text-primary-800 font-medium">7:00 AM - 11:00 AM</span>
              </div>
              
              <div class="bg-accent-100 p-6 rounded-lg mt-8">
                <div class="flex items-center space-x-3 mb-2">
                  <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <h3 class="text-lg font-semibold text-accent-800">Same-Day Appointments</h3>
                </div>
                <p class="text-accent-700">
                  We have 15 appointments open access for same day appointments
                </p>
              </div>
            </div>
          </div>
          
          <!-- Holiday Hours -->
          <div class="bg-gray-50 p-8 rounded-lg">
            <h2 class="text-3xl font-bold text-primary-800 mb-8">Holiday Hours</h2>
            
            <div class="mb-6">
              <h3 class="text-xl font-semibold text-red-600 mb-4">Closed on:</h3>
              <ul class="space-y-3">
                <li class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                  <span class="text-gray-700">Memorial Day</span>
                </li>
                <li class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                  <span class="text-gray-700">July 4th</span>
                </li>
                <li class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                  <span class="text-gray-700">Labor Day</span>
                </li>
                <li class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                  <span class="text-gray-700">Thanksgiving Day</span>
                </li>
                <li class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                  <span class="text-gray-700">Christmas Day</span>
                </li>
                <li class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                  <span class="text-gray-700">New Year's Day</span>
                </li>
              </ul>
            </div>
            
            <div class="bg-accent-100 p-6 rounded-lg">
              <div class="flex items-center space-x-3 mb-2">
                <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <h3 class="text-lg font-semibold text-accent-800">Good News!</h3>
              </div>
              <p class="text-accent-700">
                We are open all other holidays
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Location Section -->
    <section class="py-20 bg-primary-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="section-title">Location & Directions</h2>
          <p class="section-subtitle">
            Our office is conveniently located on Airways Boulevard in Southaven, MS
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Address & Contact -->
          <div class="space-y-8">
            <div class="bg-white p-8 rounded-lg shadow-md">
              <h3 class="text-2xl font-semibold text-primary-800 mb-6">Our Address</h3>
              
              <div class="flex items-start space-x-4 mb-6">
                <img 
                  src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291045/auto-site-builder/metrics-test-1/image_4.png" 
                  alt="Location" 
                  class="w-8 h-8 mt-1"
                />
                <div>
                  <p class="text-xl font-medium text-gray-800">7680 Airways Blvd.</p>
                  <p class="text-xl font-medium text-gray-800">Southaven, MS 38671</p>
                </div>
              </div>
              
              <div class="space-y-4">
                <div class="flex items-center space-x-4">
                  <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <a href="tel:6623491999" class="text-lg text-primary-800 hover:text-accent-600 font-medium transition-colors">
                    (662) 349-1999
                  </a>
                </div>
                
                <div class="flex items-center space-x-4">
                  <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2h4a1 1 0 011 1v1a1 1 0 01-1 1h-1v11a2 2 0 01-2 2H6a2 2 0 01-2-2V7H3a1 1 0 01-1-1V5a1 1 0 011-1h4z" />
                  </svg>
                  <span class="text-lg text-gray-700">(662) 349-9734</span>
                </div>
              </div>
              
              <div class="mt-8">
                <a 
                  href="https://maps.google.com/?q=7680+Airways+Blvd+Southaven+MS+38671" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="btn-primary w-full text-center"
                >
                  Get Directions
                </a>
              </div>
            </div>
            
            <!-- Directions Help -->
            <div class="bg-accent-50 p-8 rounded-lg">
              <h3 class="text-xl font-semibold text-primary-800 mb-4">Finding Our Office</h3>
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="bg-accent-400 text-white rounded-full w-6 h-6 flex items-center justify-center text-sm font-bold mt-0.5">1</div>
                  <p class="text-gray-700">Turn in at the main entrance on Airways Boulevard</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="bg-accent-400 text-white rounded-full w-6 h-6 flex items-center justify-center text-sm font-bold mt-0.5">2</div>
                  <p class="text-gray-700">Our office is located below the children's clinic</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="bg-accent-400 text-white rounded-full w-6 h-6 flex items-center justify-center text-sm font-bold mt-0.5">3</div>
                  <p class="text-gray-700">Look for our entrance sign when you arrive</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Map and Images -->
          <div class="space-y-8">
            <!-- Map -->
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-xl font-semibold text-primary-800 mb-4">Location Map</h3>
              <img 
                src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291047/auto-site-builder/metrics-test-1/image_8.jpg"
                alt="Map showing Southaven Internal Medicine location"
                class="w-full h-64 object-cover rounded-lg"
              />
            </div>
            
            <!-- Office Photo -->
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-xl font-semibold text-primary-800 mb-4">Office Entrance</h3>
              <img 
                src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291047/auto-site-builder/metrics-test-1/image_9.jpg"
                alt="Southaven Internal Medicine office building entrance"
                class="w-full h-48 object-cover rounded-lg"
              />
              <p class="text-sm text-gray-600 mt-3 text-center">
                Turn in here - our office entrance
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="py-20 bg-primary-800 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-6">Ready to Schedule Your Appointment?</h2>
        <p class="text-xl text-gray-200 mb-8">
          Call us today or visit our office during regular business hours. We're here to help!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:6623491999" class="bg-accent-400 hover:bg-accent-500 text-white font-semibold py-4 px-8 rounded-lg transition-colors">
            Call (662) 349-1999
          </a>
          <a href="/patient-portal" class="bg-white hover:bg-gray-50 text-primary-800 font-semibold py-4 px-8 rounded-lg transition-colors">
            Access Patient Portal
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>