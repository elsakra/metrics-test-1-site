---
// No props needed
---

<section class="py-20 bg-white animate-section opacity-0">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="section-title">Contact Us Today</h2>
      <p class="section-subtitle">
        Ready to schedule an appointment or have questions about our services? We're here to help.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div class="space-y-8">
        <div class="bg-primary-50 p-8 rounded-lg">
          <h3 class="text-2xl font-semibold text-primary-800 mb-6">Get in Touch</h3>
          
          <div class="space-y-6">
            <!-- Phone -->
            <div class="flex items-start space-x-4">
              <div class="bg-accent-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-primary-800 mb-1">Phone</h4>
                <a href="tel:6623491999" class="text-lg text-gray-700 hover:text-accent-600 transition-colors">
                  (662) 349-1999
                </a>
              </div>
            </div>
            
            <!-- Fax -->
            <div class="flex items-start space-x-4">
              <div class="bg-primary-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2h4a1 1 0 011 1v1a1 1 0 01-1 1h-1v11a2 2 0 01-2 2H6a2 2 0 01-2-2V7H3a1 1 0 01-1-1V5a1 1 0 011-1h4z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-primary-800 mb-1">Fax</h4>
                <p class="text-lg text-gray-700">(662) 349-9734</p>
              </div>
            </div>
            
            <!-- Address -->
            <div class="flex items-start space-x-4">
              <div class="bg-medical-teal/20 p-3 rounded-full">
                <img 
                  src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291045/auto-site-builder/metrics-test-1/image_4.png" 
                  alt="Location" 
                  class="w-6 h-6"
                />
              </div>
              <div>
                <h4 class="font-semibold text-primary-800 mb-1">Address</h4>
                <p class="text-lg text-gray-700">
                  7680 Airways Blvd.<br>
                  Southaven, MS 38671
                </p>
                <a 
                  href="https://maps.google.com/?q=7680+Airways+Blvd+Southaven+MS+38671" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-accent-600 hover:text-accent-700 font-medium mt-2 inline-block transition-colors"
                >
                  Get Directions →
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Office Hours -->
        <div class="bg-accent-50 p-8 rounded-lg">
          <h3 class="text-2xl font-semibold text-primary-800 mb-6">Office Hours</h3>
          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span class="font-medium text-gray-800">Monday & Wednesday</span>
              <span class="text-gray-700">7:00 AM - 5:00 PM</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium text-gray-800">Tuesday & Thursday</span>
              <span class="text-gray-700">8:00 AM - 5:00 PM</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium text-gray-800">Friday</span>
              <span class="text-gray-700">7:00 AM - 11:00 AM</span>
            </div>
            <div class="pt-3 border-t border-accent-200">
              <p class="text-sm text-accent-700 font-medium">
                ✓ 15 same-day appointments available daily
              </p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Map and Directions -->
      <div class="space-y-8">
        <div class="bg-gray-50 p-8 rounded-lg">
          <h3 class="text-2xl font-semibold text-primary-800 mb-6">Location & Directions</h3>
          
          <!-- Map Image -->
          <div class="mb-6">
            <img 
              src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291047/auto-site-builder/metrics-test-1/image_8.jpg"
              alt="Map showing location of Southaven Internal Medicine"
              class="w-full h-64 object-cover rounded-lg shadow-md"
            />
          </div>
          
          <div class="space-y-4">
            <div class="bg-white p-4 rounded-lg border border-gray-200">
              <h4 class="font-semibold text-primary-800 mb-2">Finding Our Office</h4>
              <p class="text-gray-700 text-sm">
                Our office is located below the children's clinic. Look for our entrance sign when you arrive.
              </p>
            </div>
            
            <div class="bg-white p-4 rounded-lg border border-gray-200">
              <img 
                src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291047/auto-site-builder/metrics-test-1/image_9.jpg"
                alt="Office building entrance"
                class="w-full h-32 object-cover rounded mb-3"
              />
              <p class="text-sm text-gray-600">Turn in here - our office entrance</p>
            </div>
          </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="bg-primary-800 text-white p-8 rounded-lg">
          <h3 class="text-xl font-semibold mb-6">Ready to Get Started?</h3>
          <div class="space-y-4">
            <a href="tel:6623491999" class="block w-full bg-accent-400 hover:bg-accent-500 text-white font-semibold py-3 px-6 rounded-lg text-center transition-colors">
              Call (662) 349-1999
            </a>
            <a href="/patient-portal" class="block w-full bg-white hover:bg-gray-50 text-primary-800 font-semibold py-3 px-6 rounded-lg text-center transition-colors">
              Access Patient Portal
            </a>
            <div class="text-center pt-4">
              <p class="text-gray-300 text-sm mb-2">Follow us on social media:</p>
              <a 
                href="https://www.facebook.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                class="inline-flex items-center space-x-2 text-gray-300 hover:text-white transition-colors"
              >
                <img 
                  src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291047/auto-site-builder/metrics-test-1/image_5.png" 
                  alt="Facebook" 
                  class="w-5 h-5"
                />
                <span>Facebook</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>