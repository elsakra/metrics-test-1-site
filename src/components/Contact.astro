<section class="py-20 bg-white animate-section">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="section-title">Contact Us Today</h2>
      <p class="section-subtitle">
        Ready to schedule an appointment or have questions about our services? We're here to help.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div class="space-y-8">
        <div class="bg-primary-50 p-8 rounded-lg">
          <h3 class="text-2xl font-semibold text-primary-800 mb-6">Get in Touch</h3>
          
          <div class="space-y-6">
            <!-- Phone -->
            <div class="flex items-start space-x-4">
              <div class="bg-accent-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-primary-800 mb-1">Phone</h4>
                <a href="tel:6623491999" class="text-lg text-gray-800 hover:text-accent-600 transition-colors font-medium">
                  (662) 349-1999
                </a>
              </div>
            </div>
            
            <!-- Fax -->
            <div class="flex items-start space-x-4">
              <div class="bg-primary-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-primary-800 mb-1">Fax</h4>
                <p class="text-lg text-gray-800 font-medium">(662) 349-9734</p>
              </div>
            </div>
            
            <!-- Address -->
            <div class="flex items-start space-x-4">
              <div class="bg-medical-teal/20 p-3 rounded-full">
                <img 
                  src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291045/auto-site-builder/metrics-test-1/image_4.png" 
                  alt="Location" 
                  class="w-6 h-6"
                />
              </div>
              <div>
                <h4 class="font-semibold text-primary-800 mb-1">Address</h4>
                <p class="text-lg text-gray-800 font-medium">
                  7680 Airways Blvd.<br>
                  Southaven, MS 38671
                </p>
                <a 
                  href="https://maps.google.com/?q=7680+Airways+Blvd,+Southaven,+MS+38671" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-accent-600 hover:text-accent-700 transition-colors text-sm font-medium"
                >
                  Get Directions â†’
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Office Hours -->
        <div class="bg-gray-50 p-8 rounded-lg">
          <h3 class="text-2xl font-semibold text-primary-800 mb-6">Office Hours</h3>
          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span class="font-medium text-gray-800">Monday & Wednesday</span>
              <span class="text-primary-800 font-semibold">7:00 AM - 5:00 PM</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium text-gray-800">Tuesday & Thursday</span>
              <span class="text-primary-800 font-semibold">8:00 AM - 5:00 PM</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium text-gray-800">Friday</span>
              <span class="text-primary-800 font-semibold">7:00 AM - 11:00 AM</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Call to Action -->
      <div class="flex flex-col justify-center space-y-8">
        <div class="text-center">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291048/auto-site-builder/metrics-test-1/image_13.jpg"
            alt="Southaven Internal Medicine Office"
            class="rounded-lg shadow-xl w-full h-64 object-cover mb-8"
          />
          
          <h3 class="text-3xl font-bold text-primary-800 mb-4">Ready to Schedule?</h3>
          <p class="text-lg text-gray-700 mb-8">
            Call us today to schedule your appointment or learn more about our services. We're here to provide you with exceptional care.
          </p>
          
          <div class="space-y-4">
            <a href="tel:6623491999" class="btn-primary text-lg px-10 py-4 w-full block text-center">
              Call (662) 349-1999
            </a>
            <a href="/patient-portal" class="btn-secondary text-lg px-10 py-4 w-full block text-center">
              Access Patient Portal
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>