---
// No props needed
---

<section class="py-20 bg-white animate-section opacity-0">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="section-title">Contact Us Today</h2>
      <p class="section-subtitle">
        Ready to schedule an appointment or have questions about our services? We're here to help.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div class="space-y-8">
        <div class="bg-primary-50 p-8 rounded-lg">
          <h3 class="text-2xl font-semibold text-primary-800 mb-6">Get in Touch</h3>
          
          <div class="space-y-6">
            <!-- Phone -->
            <div class="flex items-start space-x-4">
              <div class="bg-accent-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-primary-800 mb-1">Phone</h4>
                <a href="tel:6623491999" class="text-lg text-gray-700 hover:text-accent-600 transition-colors">
                  (662) 349-1999
                </a>
              </div>
            </div>
            
            <!-- Fax -->
            <div class="flex items-start space-x-4">
              <div class="bg-primary-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-primary-800 mb-1">Fax</h4>
                <p class="text-lg text-gray-700">(662) 349-9734</p>
              </div>
            </div>
            
            <!-- Address -->
            <div class="flex items-start space-x-4">
              <div class="bg-medical-teal/20 p-3 rounded-full">
                <img 
                  src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291045/auto-site-builder/metrics-test-1/image_4.png" 
                  alt="Location" 
                  class="w-6 h-6"
                />
              </div>
              <div>
                <h4 class="font-semibold text-primary-800 mb-1">Address</h4>
                <p class="text-lg text-gray-700">
                  7680 Airways Blvd.<br>
                  Southaven, MS 38671
                </p>
              </div>
            </div>
          </div>
          
          <div class="mt-8 pt-6 border-t border-primary-200">
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="tel:6623491999" class="btn-primary flex-1 text-center">
                Call Now
              </a>
              <a href="/hours-location" class="btn-secondary flex-1 text-center">
                View Hours
              </a>
            </div>
          </div>
        </div>
        
        <!-- Office Hours Quick Reference -->
        <div class="bg-gray-50 p-6 rounded-lg">
          <h4 class="text-lg font-semibold text-primary-800 mb-4">Office Hours</h4>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600">Mon & Wed:</span>
              <span class="font-medium">7:00 AM - 5:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Tue & Thu:</span>
              <span class="font-medium">8:00 AM - 5:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Friday:</span>
              <span class="font-medium">7:00 AM - 11:00 AM</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Map/Image -->
      <div class="relative">
        <div class="bg-primary-100 rounded-lg p-8 h-full flex items-center justify-center">
          <div class="text-center">
            <div class="bg-white p-6 rounded-full w-24 h-24 flex items-center justify-center mx-auto mb-6">
              <img 
                src="https://res.cloudinary.com/dil14r8je/image/upload/v1768291045/auto-site-builder/metrics-test-1/image_4.png" 
                alt="Location" 
                class="w-12 h-12"
              />
            </div>
            <h3 class="text-2xl font-bold text-primary-800 mb-4">Visit Our Office</h3>
            <p class="text-gray-700 mb-6">
              Conveniently located on Airways Boulevard in Southaven, MS. Easy parking and accessible entrance.
            </p>
            <a 
              href="https://maps.google.com/?q=7680+Airways+Blvd,+Southaven,+MS+38671" 
              target="_blank" 
              rel="noopener noreferrer"
              class="btn-secondary"
            >
              Get Directions
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>