<section id="about" class="py-20 bg-white animate-section opacity-0">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="section-title">Dedicated to Our Patients Since 1996</h2>
      <p class="section-subtitle">
        Southaven Internal Medicine has been committed to providing our patients with the highest level of care in a friendly and comfortable environment.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-6">
        <div class="prose prose-lg text-gray-700">
